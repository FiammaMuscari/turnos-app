// schema.prisma

model User {
  id           Int           @id @default(autoincrement())
  email        String        @unique
  name         String?
  appointments Appointment[]
}

model Service {
  id    Int      @id @default(autoincrement())
  name  String
  price Float
}

model Appointment {
  id           Int      @id @default(autoincrement())
  user_id      Int
  user         User     @relation(fields: [user_id], references: [id])
  date         DateTime
  time         String
  is_available Boolean  @default(true)
  service_id   Int?
  service      Service? @relation(fields: [service_id], references: [id])
}
